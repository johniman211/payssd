# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with actual production values

# Database - Use MongoDB Atlas or production MongoDB instance
MONGODB_URI=your_production_mongodb_uri_here

# JWT Secret - Generate a strong random secret
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

# Client URL - Your production frontend URL
CLIENT_URL=https://payssd.com

# Email Configuration - Use production email service
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USER=your_production_email_user
EMAIL_PASS=your_production_email_password
EMAIL_FROM=PaySSD <support@payssd.com>

# SMS Configuration
SMS_API_KEY=your_production_sms_api_key
SMS_API_URL=https://api.smsgateway.com/send

# MTN Mobile Money API (Production)
MTN_API_BASE_URL=https://momodeveloper.mtn.com
MTN_API_KEY=your_production_mtn_api_key
MTN_API_SECRET=your_production_mtn_api_secret
MTN_SUBSCRIPTION_KEY=your_production_mtn_subscription_key
MTN_TARGET_ENVIRONMENT=production

# Digicash API (Production)
DIGICASH_API_BASE_URL=https://api.digicash.ss
DIGICASH_API_KEY=your_production_digicash_api_key
DIGICASH_API_SECRET=your_production_digicash_api_secret
DIGICASH_MERCHANT_ID=your_production_digicash_merchant_id

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=your_admin_email
ADMIN_PASSWORD=your_secure_admin_password

# Application Settings
NODE_ENV=production
APP_NAME=PaySSD
APP_URL=https://payssd.com
SUPPORT_EMAIL=support@payssd.com
SUPPORT_PHONE=+211123456789

# Security Settings
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log